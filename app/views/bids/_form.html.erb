

<%= form_for(@bid) do |f| %>

  <% if @bid.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bid.errors.count, "error") %> prohibited this bid from being saved:</h2>

      <ul>
      <% @bid.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <br>

    <div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
         
  <div class="field">
    <%= f.hidden_field :user_id ,:value => current_user.id%>
  </div>

  <div class="field">
    <%= f.label :player_id %><br>
    <%if params[:player_id] != nil %>
    <%= f.hidden_field :player_id ,:value => params[:player_id]%>
      <% @myusers.each do |x|%>
        <% if ((params[:player_id]).to_i==x.id) %>
        <%= x.name%>
        <% @thisplayer = x%>
      <%end%>
      <%end%>
    <%else%>
    <%= f.hidden_field :player_id ,:value => params[:bid][:player_id]%>
      <% @myusers.each do |x|%>
        <% if ((params[:bid][:player_id]).to_i==x.id) %>
        <%= x.name%>
        <% @thisplayer = x%>
      <%end%>
      <%end%>
    <%end%>
  </div>

    <br>

  <div class="container">
  <%=image_tag @thisplayer.image, :class => "img-responsive", :width => 240, :height => 478 %>
  </div>
  
    <br>
  <div class="field">
    <%= f.label :amount %><br>
    $<%= f.number_field :amount %>
  </div>
    <br>

  <div class="field">
    <%= f.label :Description %><br>
    <%= f.hidden_field :player_id ,:value => params[:player_id]%>
  <% @myusers.each do |x|%>
    <% if ((params[:player_id]).to_i==x.id) %>
    <%= x.desc%>
    <%@thisplayer = x%>
  <%end%>
  <%end%>
  </div>

    <br>
    <br>
  
  <div class="actions">
    <%= f.submit %>
  </div>

        </div>
        </div>
    </div>
</div>


<% end %>
