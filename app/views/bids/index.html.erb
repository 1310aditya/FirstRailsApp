<p id="notice"><%= notice %></p>
<%= render 'home/header'%>
<h1>Listing Bids</h1>

<table class = "table table-bordered">
  <thead>
    <tr>
      <th>User</th>
      <th>Player</th>
      <th>Amount</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><% @myusers.each do |x|%>
              <% if (bid.user_id==x.id) %>
              <%= x.name%>
            <%end%>
          <%end%>
        </td>
        <td><% @myusers.each do |x|%>
              <% if (bid.player_id==x.id) %>
              <%= x.name%>
              <% @thispl = x%>
            <%end%>
          <%end%>
        </td>
        <td><%= bid.amount %></td>
        <td>
              <%if bid.status==0%>
              Waiting
              <%elsif bid.status==1%>
              Accepted
              <%elsif bid.status==1%>
              Rejected
              <%end%>
        </td>
        <td><%= link_to 'Show', bid %></td>
        <td>
              <%if bid.status==0%>
              <%= link_to 'Edit', edit_bid_path(bid , :player_id => @thispl.id ) %>
              <%else%>
              Cannot Edit
              <%end%>
        </td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', root_path , :class => 'btn btn-default'%>
